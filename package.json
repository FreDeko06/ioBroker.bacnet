{
  "name": "iobroker.bacnet",
  "version": "0.0.1",
  "description": "Adapter to communicate with devices using BACnet",
  "author": {
    "name": "FreDeko",
    "email": "freddegenkolb@gmail.com"
  },
  "homepage": "https://github.com/FreDeko06/ioBroker.bacnet",
  "license": "MIT",
  "keywords": [
    "bac",
    "bacnet",
    "automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/FreDeko06/ioBroker.bacnet.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@bacnet-js/client": "^3.0.0",
    "@iobroker/adapter-core": "^3.3.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/adapter-react": "^2.0.22",
    "@iobroker/adapter-react-v5": "^7.7.2",
    "@iobroker/testing": "^5.1.1",
    "@material-ui/core": "^4.12.4",
    "@tsconfig/node20": "^20.1.6",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.15",
    "@types/proxyquire": "^1.3.31",
    "@types/react": "^17.0.88",
    "@types/react-dom": "^17.0.26",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "chai": "^6.0.1",
    "chai-as-promised": "^8.0.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "mocha": "^11.7.2",
    "proxyquire": "^2.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^6.0.1",
    "sinon": "^21.0.0",
    "sinon-chai": "^4.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.0.4"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build/",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build admin/build",
    "build": "build-adapter all",
    "watch": "build-adapter all --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "prebuild:react": "rimraf admin/build",
    "build:react": "build-adapter react",
    "watch:react": "build-adapter react --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit && tsc --noEmit -p admin/tsconfig.json",
    "lint": "eslint -c eslint.config.js --ext .ts,.tsx src/",
    "fix": "eslint --fix -c eslint.config.js --ext .ts,.tsx src/",
    "translate": "translate-adapter",
    "release": "release-script",
    "dev-server": "dev-server"
  },
  "bugs": {
    "url": "https://github.com/FreDeko06/ioBroker.bacnet/issues"
  },
  "readmeFilename": "README.md"
}
